<main class="content">
  <!--找尋所有關鍵字-->
  <%
  let allTags=[]
  site.tags.data.forEach(e =>{
    allTags.push(e.name)
  })
  %>
  <div class="container">
    <div class="row article-row">
        <% allTags.forEach(tag => { %>
          <div class="article-main-post col s12 m6 l4" data-aos="zoom-in">
              <!-- 資訊 -->
              <div class="card-content article-content col s12 m7">
                  <div class="publish-info">
                    <!-- 關鍵字 -->
                    <div class="card-action article-tags">
                      <a href="/tags/<%= tag %>/">
                          <span class="black-text"><%= tag %></span>
                      </a>
                    </div>
                  </div>
              </div>
          </div> 
        <% }); %>
    </div>
  </div>
</main>