<main class="content">
  <!--找尋所有作者並清除重複作者-->
  <% 
  let allAuthors=[]
  site.posts.data.forEach(e => {
    allAuthors.push(e.author)
  })
  const noRepeatAuthors=[...new Set(allAuthors.map(item=>JSON.stringify(item)))].map(item=>JSON.parse(item))
  %>
  <div class="container">
    <div class="row article-row">
        <% noRepeatAuthors.forEach(author => { %>          
          <div class="article-main-post col s12 m6 l4" data-aos="zoom-in">
              <!-- 照片 -->
              <div class="card-image col s12 m5">
                  <% if (author.photo) { %>
                    <img src="<%- url_for(author.photo) %>" class="responsive-img" alt="<%= author.name %>">
                  <% } %>
              </div>
              <!-- 資訊 -->
              <div class="card-content article-content col s12 m7">
                <div class="publish-info">
                  <!-- 作者 -->
                  <span class="publish-author point-color">
                      <a  class="point-color" href="/author/<%= author.name %>/"><%= author.name %></a>
                  </span><br>
                  <span class="author-info">  
                    <!--作者介紹取前39字-->
                    <% if (author.about && author.about.length < 39) { %>
                      <%= author.about %>
                    <% }else{ %>
                      <%- author.about.substring(0,39) %>...
                    <% } %>
                  </span>
                </div>
              </div>          
        </div> 
        <% }); %>
    </div>
  </div>
</main>